# Binance API Configuration
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# For testing, use testnet: https://testnet.binance.vision/

# Leave empty for public data only (no trading)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Coinbase API Configuration (optional)
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Database Configuration
DATABASE_URL=sqlite:///data/cryptobot.db

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
LOG_LEVEL=INFO

# Trading Mode
TRADING_MODE=simulation  # simulation, paper, live

# Risk Limits
MAX_DRAWDOWN=0.10
DAILY_LOSS_LIMIT=0.03